<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xmc.dao.VideoDao">

    <select id="getVideoById" parameterType="int" resultType="Video">
        SELECT *
        FROM Videos
        WHERE id = #{id};
    </select>

    <delete id="deleteById" parameterType="int">
        DELETE
        FROM Videos
        WHERE id = #{id};
    </delete>

    <select id="getAllVideos" resultType="Video">
        SELECT *
        FROM Videos
    </select>

    <update id="updateById" parameterType="Video">
        UPDATE Students
        SET name = #{name}, grade = #{grade}, subject = #{subject}, url = #{url}, description = #{description}
        WHERE  id = #{id}
    </update>

    <insert id="insert" parameterType="Video" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Videos(name, grade, subject, description, url)
        VALUES (#{name}, #{grade}, #{subject}, #{description}, #{url});
    </insert>


</mapper>